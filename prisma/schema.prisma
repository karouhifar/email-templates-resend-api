generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  engineType = "client"
  runtime = "bun"
}

datasource db {
  provider = "postgresql"
}

model Owner {
  key_id    String   @id @db.Text
  name      String
  email     String   @unique
  isOwner   Boolean  @default(true) @map("IsOwner")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
}